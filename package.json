{
  "name": "dc-manager",
  "version": "1.0.0",
  "description": "DataCite repository management console",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier . --check",
    "format:fix": "prettier . --write",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "e2e": "playwright test",
    "e2e:ui": "playwright test --ui",
    "ci": "npm run format && npm run lint && npm run typecheck && npm run test && npm run build",
    "ci:all": "npm run ci && npm run e2e"
  },
  "dependencies": {
    "bootstrap": "^5.3.3",
    "bootstrap-icons": "^1.11.3",
    "datatables.net": "^2.0.8",
    "datatables.net-bs5": "^2.0.8",
    "jquery": "^3.7.1",
    "jszip": "^3.10.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.48.2",
    "@types/jquery": "^3.5.30",
    "@types/jszip": "^3.4.7",
    "@typescript-eslint/eslint-plugin": "^8.9.0",
    "@typescript-eslint/parser": "^8.9.0",
    "@vitest/ui": "^2.1.2",
    "eslint": "^9.11.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.31.0",
    "jsdom": "^25.0.1",
    "prettier": "^3.3.3",
    "typescript": "^5.6.3",
    "vite": "^5.4.8",
    "vitest": "^2.1.2",
    "@types/datatables.net": "^1.13.10",
    "@types/node": "^22.7.5"
  }
}
